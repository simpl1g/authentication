<div class="show">
  <p id="code" class="alert"><%= @user.get_activation_code %></p>
  <%= form_tag( url_for(controller: "user_sessions", action: "create"), :class => 'form-horizontal', remote: true) do %>
      <div class="control-group">
        <%= label_tag :code, "Code", :class => 'control-label' %>
        <div class="controls">
          <%= text_field_tag :code, nil, :placeholder => 'Enter Code here in 30 sec...', :class => 'text_field' %>
        </div>
      </div>
      <div class="form-actions">
        <%= submit_tag "Submit", :class => 'btn btn-primary' %>
      </div>
  <% end %>
</div>