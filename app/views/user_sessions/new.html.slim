- if notice
  p.alert.alert-warning= notice
= form_tag( url_for(controller: "user_sessions", action: "check_user"), class: 'form-horizontal') do
  .control-group
    = label_tag :login, "Login or Email", :class => 'control-label'
    .controls
      = text_field_tag :login, nil, :placeholder => 'Enter Login or Email here...', :class => 'text_field'
  .control-group
    = label_tag :password, "Password", :class => 'control-label'
    .controls
      = password_field_tag :password, nil, :placeholder => 'Enter Password here...', :class => 'text_field'
  .form-actions
    = submit_tag "Submit", :class => 'btn btn-primary'
