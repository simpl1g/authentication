<%= form_tag( url_for(controller: "user_sessions", action: "check_user"), class: 'form-horizontal', remote: true) do %>
    <div class="control-group">
      <%= label_tag :login, "Login or Email", :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :login, nil, :placeholder => 'Enter Login or Email here...', :class => 'text_field' %>
      </div>
    </div>
    <div class= "control-group" >
      <%= label_tag :password, "Password", :class => 'control-label' %>
      <div class="controls">
        <%= password_field_tag :password, nil, :placeholder => 'Enter Password here...', :class => 'text_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= submit_tag "Submit", :class => 'btn btn-primary' %>
    </div>
<% end %>