.navbar.navbar-fixed-top
  .navbar-inner
    .container
      a.btn.btn-navbar data-target=".nav-collapse" data-toggle="collapse"
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.brand href="/" Authentication
      .container.nav-collapse
        ul.nav.pull-right
          li= link_to "Admin Panel", admin_root_path
          li= link_to "Users", users_path
          - if signed_in?
            li= link_to current_user.login, current_user, id: "current_user"
            li= link_to "LogOut", logout_path, id: "logout"
          - else
            li= link_to "SignUp", new_user_path, id: "sign_in"
            li= link_to "LogIn", login_path, id: "login", remote: true
            li= link_to "LogIn via Facebook", :controller => 'oauth', :action => 'start'
